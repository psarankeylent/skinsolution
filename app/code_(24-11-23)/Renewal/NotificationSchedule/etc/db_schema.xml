<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="rxschedule" resource="default" engine="innodb" comment="schedule renewal prescription email Table">
		<column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
		<column name="intervel_days" nullable="true" xsi:type="smallint" comment="intervel_days" identity="false"/>
		<column name="Experation_days" nullable="true" xsi:type="smallint" comment="Experation_days" identity="false"/>
		<column name="last_run" nullable="true" xsi:type="date" comment="last_run"/>
		<column name="next_run" nullable="true" xsi:type="date" comment="next_run"/>
		<column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id"/>
		</constraint>
	</table>
</schema>