<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_form">
            <action method="addTab">
                <argument name="name" xsi:type="string">store_credit_name</argument>
                <argument name="block" xsi:type="string">store_credit_block</argument>
            </action>
            <block class="Ssmd\StoreCredit\Block\Adminhtml\Customer\StoreCredit" name="store_credit_block">
                <arguments>
                    <argument name="sort_order" xsi:type="number">100</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
