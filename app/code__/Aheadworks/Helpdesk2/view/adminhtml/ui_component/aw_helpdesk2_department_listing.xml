<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">aw_helpdesk2_department_listing.aw_helpdesk2_department_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>aw_helpdesk2_department_columns</spinner>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Create New Department</label>
            </button>
        </buttons>
        <deps>
            <dep>aw_helpdesk2_department_listing.aw_helpdesk2_department_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="aw_helpdesk2_department_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Aheadworks_Helpdesk2::departments</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="aw_helpdesk2_department_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters">
            <filterSelect name="store_ids" provider="${ $.parentName }">
                <settings>
                    <captionValue>0</captionValue>
                    <options class="Aheadworks\Helpdesk2\Ui\Component\Listing\Columns\Store\Options"/>
                    <label translate="true">Visibility</label>
                    <dataScope>store_ids</dataScope>
                </settings>
            </filterSelect>
        </filters>
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="delete">
                <settings>
                    <confirm>
                        <title translate="true">Delete Departments</title>
                        <message translate="true">Are you sure you want to delete selected departments?</message>
                    </confirm>
                    <url path="aw_helpdesk2/department/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="changeStatus">
                <argument name="primaryFieldName" xsi:type="string">id</argument>
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">changeStatus</item>
                        <item name="label" xsi:type="string" translate="true">Change Status</item>
                    </item>
                </argument>
                <argument name="actions" xsi:type="array">
                    <item name="0" xsi:type="array">
                        <item name="type" xsi:type="string">enable</item>
                        <item name="label" xsi:type="string" translate="true">Enable</item>
                        <item name="url" xsi:type="url" path="aw_helpdesk2/department/massChangeStatus">
                            <param name="is_active">1</param>
                        </item>
                    </item>
                    <item name="1" xsi:type="array">
                        <item name="type" xsi:type="string">disable</item>
                        <item name="label" xsi:type="string" translate="true">Disable</item>
                        <item name="url" xsi:type="url" path="aw_helpdesk2/department/massChangeStatus">
                            <param name="is_active">0</param>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="aw_helpdesk2_department_columns">
        <selectionsColumn name="ids" sortOrder="0">
            <settings>
                <indexField>id</indexField>
                <preserveSelectionsOnFilter>true</preserveSelectionsOnFilter>
            </settings>
        </selectionsColumn>
        <column name="name" sortOrder="10" class="Aheadworks\Helpdesk2\Ui\Component\Listing\Columns\LinkColumn" component="Aheadworks_Helpdesk2/js/ui/grid/columns/link">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="viewUrlPath" xsi:type="string">aw_helpdesk2/department/edit</item>
                    <item name="urlEntityParamName" xsi:type="string">id</item>
                    <item name="entityFieldName" xsi:type="string">id</item>
                </item>
            </argument>
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="gateway_email" sortOrder="20" class="Aheadworks\Helpdesk2\Ui\Component\Listing\Department\Columns\GatewayEmail">
            <settings>
                <sortable>false</sortable>
                <dataType>text</dataType>
                <label translate="true">Gateway</label>
            </settings>
        </column>
        <column name="is_active" component="Magento_Ui/js/grid/columns/select" sortOrder="30">
            <settings>
                <options class="Aheadworks\Helpdesk2\Model\Source\Status"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="store_ids" sortOrder="40" class="Aheadworks\Helpdesk2\Ui\Component\Listing\Department\Columns\Store">
            <settings>
                <label translate="true">Visibility</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="sort_order" sortOrder="50">
            <settings>
                <filter>textRange</filter>
                <dataType>number</dataType>
                <label translate="true">Sort Order</label>
            </settings>
        </column>
    </columns>
</listing>
