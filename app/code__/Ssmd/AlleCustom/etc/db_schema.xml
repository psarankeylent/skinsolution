		<!-- <column xsi:type="timestamp" name="createdAt" comment="Created Date"/>
		<column xsi:type="timestamp" name="updatedAt" comment="Updated Date"/> -->
		<constraint xsi:type="primary" referenceId="PRIMARY">
		    <column name="id"/>
		</constraint>	 
	</table>
	   
</schema>
