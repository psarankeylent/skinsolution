<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="pause_subscription" resource="default" engine="innodb">
		<column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" />
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id"/>
		</constraint>
		<column name="customer_id" nullable="true" xsi:type="int" identity="false"/>
		<column name="subscription_id" nullable="true" xsi:type="int" identity="false"/>
		<column name="pause_reason" nullable="true" xsi:type="text" />
		<column name="discount_accepted_by_customer" nullable="true" xsi:type="varchar" length="55" />
		<column name="discount_applied_on_quote" nullable="true" xsi:type="varchar" length="55" />
		<column name="quote_id" nullable="true" xsi:type="varchar" length="55" />
		<column name="quote_item_id" nullable="true" xsi:type="varchar" length="55" />
		<column name="before_discount_price" nullable="true" xsi:type="varchar" length="55" />
		<column name="after_discount_price" nullable="true" xsi:type="varchar" length="55" />
		<column name="updated_at" nullable="false" xsi:type="timestamp" />

	</table>
</schema>
