<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="download_reports" resource="default" engine="innodb" comment="Download Reports Table">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Id"/>
        <column xsi:type="varchar" name="report_name" nullable="true" length="255" comment="Report name"/>
        <column xsi:type="varchar" name="namespace" nullable="true" length="255" comment="Namespace"/>
        <column xsi:type="varchar" name="requested_email" nullable="true" length="55" comment="Requested user email"/>
        <column xsi:type="varchar" name="requested_name" nullable="true" length="55" comment="Requested user name"/>
        <column xsi:type="int" name="download_status" default="0" comment="Download status"/>
        <column xsi:type="int" name="email_sent_status" default="0" comment="Email sent status"/>
        <column xsi:type="text" name="filters" comment="Filters - filters json encoded data"/>
        <column xsi:type="int" name="status" default="0" comment="Status"/>
        <column xsi:type="int" name="total_records" comment="Total Records"/>
        <column xsi:type="int" name="exported_count" comment="Count # of Exported Data"/>
        <column xsi:type="varchar" name="filepath" nullable="true" length="100" comment="Csv File Path"/>
        <column xsi:type="varchar" name="filesize" nullable="true" length="100" comment="Csv File Size(In Bytes)"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
