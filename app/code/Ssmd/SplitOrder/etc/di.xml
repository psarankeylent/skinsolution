<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- API Preferences -->
    <preference for="Ssmd\SplitOrder\Api\QuoteHandlerInterface" type="Ssmd\SplitOrder\Model\QuoteHandler"/>
    <preference for="Ssmd\SplitOrder\Api\ExtensionAttributesInterface" type="Ssmd\SplitOrder\Model\ExtensionAttributes"/>

    <!-- Plugins -->
    <type name="Magento\Quote\Model\QuoteManagement">
        <plugin name="Ssmd-splitorder-split-quote" type="Ssmd\SplitOrder\Plugin\SplitQuote" sortOrder="1"/>
    </type>
    <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="save_order_tax" disabled="true"/>
    </type>

    <!-- Override -->
    <preference for="Magento\Checkout\Block\Onepage\Success" type="Ssmd\SplitOrder\Block\Checkout\Success"/>

    <!-- Proxies -->
    <type name="Ssmd\SplitOrder\Model\QuoteHandler">
        <arguments>
            <argument name="QuoteHandler" xsi:type="object">Magento\Checkout\Model\Session\Proxy</argument>
        </arguments>
    </type>
</config>
