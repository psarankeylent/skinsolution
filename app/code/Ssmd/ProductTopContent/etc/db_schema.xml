<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

       <!-- Product Top Content table -->
	<table name="product_content_sections">
		<column xsi:type="int" name="id" padding="11" identity="true" unsigned="true" nullable="false" comment="Product Content Section Id"/>
		<column xsi:type="varchar" name="content_section" nullable="true" comment="Product Content Section"/>
		<column xsi:type="smallint" name="status"  nullable="true" default="1" comment="Status"/>
		<column xsi:type="int" name="sort_order" padding="11" nullable="true" comment="Sort Order"/>

		<!-- Primary Id -->
		<constraint xsi:type="primary" referenceId="PRIMARY">
		    <column name="id"/>
		</constraint>
	</table>
</schema>
