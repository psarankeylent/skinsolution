<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">prescriptions_expiring_prescription_expire_schedule_form.prescription_expire_schedule_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Prescriptions\Expiring\Block\Adminhtml\Prescription\Expire\Schedule\Edit\BackButton"/>
			<button name="delete" class="Prescriptions\Expiring\Block\Adminhtml\Prescription\Expire\Schedule\Edit\DeleteButton"/>
			<button name="save" class="Prescriptions\Expiring\Block\Adminhtml\Prescription\Expire\Schedule\Edit\SaveButton"/>
			<button name="save_and_continue" class="Prescriptions\Expiring\Block\Adminhtml\Prescription\Expire\Schedule\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>prescriptions_expiring_prescription_expire_schedule_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>prescriptions_expiring_prescription_expire_schedule_form.prescription_expire_schedule_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="prescription_expire_schedule_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="prescription_expire_schedule_form_data_source" class="Prescriptions\Expiring\Model\Prescriptionexpireschedule\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="intervel_days" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">prescription_expire_schedule</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Run every (days)</label>
				<dataScope>intervel_days</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="Experation_days" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">prescription_expire_schedule</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Prescriptions expiring in (days)</label>
				<dataScope>Experation_days</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
